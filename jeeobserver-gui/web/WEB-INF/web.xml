<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>jeeObserver GUI 4.1</display-name>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>home.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/secure/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>researchFilterServlet</servlet-name>
        <servlet-class>menu.ResearchFilterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>researchFilterServlet</servlet-name>
        <url-pattern>/secure/researchFilter</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>hardDiskServlet</servlet-name>
        <servlet-class>hardDisk.HardDiskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hardDiskServlet</servlet-name>
        <url-pattern>/secure/hardDisk</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>httpSessionServlet</servlet-name>
        <servlet-class>httpSession.HttpSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>httpSessionServlet</servlet-name>
        <url-pattern>/secure/httpSession</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>jvmServlet</servlet-name>
        <servlet-class>jvm.JvmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jvmServlet</servlet-name>
        <url-pattern>/secure/jvm</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>actionServlet</servlet-name>
        <servlet-class>action.ActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>actionServlet</servlet-name>
        <url-pattern>/secure/action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>commonServlet</servlet-name>
        <servlet-class>utilities.CommonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>commonServlet</servlet-name>
        <url-pattern>/secure/common</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ruleServlet</servlet-name>
        <servlet-class>rule.RuleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ruleServlet</servlet-name>
        <url-pattern>/secure/rule</url-pattern>
    </servlet-mapping>
    <!-- Session Active Filter - Must be at first because if session is not active redirect to login page -->
    <filter>
        <display-name>Application Filter</display-name>
        <filter-name>Application Filter</filter-name>
        <filter-class>application.filters.ApplicationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Application Filter</filter-name>
        <url-pattern>/secure/*</url-pattern>
    </filter-mapping>
    <!-- jeeObserver Listener
	 <listener>
			 <listener-class>jeeobserver.JeeObserverListener</listener-class>
	 </listener>
	 -->
    <!-- jeeObserver Servlet Filter
	 <filter>
			 <display-name>JeeObserver servlet filter</display-name>
			 <filter-name>jeeObserverServletFilter</filter-name>
			 <filter-class>jeeobserver.ServletFilter</filter-class>
	 </filter>
	 <filter-mapping>
			 <filter-name>jeeObserverServletFilter</filter-name>
			 <url-pattern>/*</url-pattern>
	 </filter-mapping>
	 -->
    <!-- jeeObserver HTTP session listener
	 <listener>
			 <listener-class>jeeobserver.HttpSessionListener</listener-class>
	 </listener>
	 -->




